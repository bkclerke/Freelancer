@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

	@{ var about = CurrentPage.AncestorOrSelf(1).About.First(); }
	
@if(CurrentPage.AncestorOrSelf(1).About.Count() > 0)
{
	<!-- About Section -->
    <section class="success" id="@about.Name.ToLower().Replace(" ", "_")">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>@((about.HasValue("header")? about.header : about.Name))</h2>
                    <hr class="star-light">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-2">
                    @about.leftColumn
                </div>
                <div class="col-lg-4">
                    @about.rightColumn
                </div>
                <div class="col-lg-8 col-lg-offset-2 text-center">
					@about.fullBodyText
                    @*<a href="#" class="btn btn-lg btn-outline">
                        <i class="fa fa-download"></i> Download Theme
                    </a>*@
                </div>
            </div>
        </div>
    </section>
}